.header{
  position absolute
  left: 0
  top: 0
  display: flex
  justify-content: space-evenly
  align-items: center
  height: 80px
  width: 100%
  color: white
  .logo{
    cursor pointer
  }
  .nav{
    display: flex
    .nav-item{
      margin: 0 10px
      padding: 10px 20px
      border-radius: 4px
      transition: .25s
      cursor: pointer
      background-color: rgba(0,0,0,0)
      &:hover{
        background-color: rgba(0,0,0,.06)
      }
      &::before{
        content: ''
        position absolute
        margin-top 22px
        margin-left 1px
        width 30px
        height 3px
        background-color rgb(112, 192, 0)
        opacity 0
        transform: scale(0)
        transition: .25s
      }
      &:hover::before{
        opacity 1
        transform: scale(1)
      }
    }
  }
}
.top-bgImg{
  z-index: -100
  position fixed
  width 100%
  height 100%
  background-repeat: no-repeat;
  background-size: cover;
  background-position center
  background-image url('@/assets/bg.jpg')
  .middle-content{
    margin 0
    padding: 0
    position absolute
    top 46.5%
    left 50%
    transform translate(-50%, -50%)
    width: 100%
    text-align: center
    color white
    font-size 16px
    .top-title{
      margin 0
      margin-bottom 30px
      font-size 80px
      font-weight 400
      // 字体间隔
      letter-spacing 6px
    }
    .green-line{
      margin 0 auto
      margin-bottom 24px
      width 78px
      height 4px
      background-color rgb(112, 192, 0);
    }
  }
}